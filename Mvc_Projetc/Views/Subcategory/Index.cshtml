@model IEnumerable<Mvc_Projetc.Models.Subcategory>

<div class="container">
    <div class="row">
        <div class="col-md-3 mt-5">
            @Html.Partial("_Sidebar")
        </div>
        <div class="col-md-9 mt-5">


         @using (Html.BeginForm("Index", "Subcategory", FormMethod.Get))
         {
             <h1>Subcategory Index</h1>
             <hr />
            <div class="row">
                   <div class="col-md-6">
                       <a class="btn btn-primary" @Html.ActionLink("Create","create","Subcategory")
                   </div>
                <div class="col-md-6">
                    <input type="search" name="search" class="form-control"  placeholder="Search" />
                   
                </div>
            </div>

             <table class="table">
                 <tr>
                     <th>
                         @Html.DisplayNameFor(model => model.Id)
                     </th>

                     <th>
                         @Html.DisplayNameFor(model => model.Name)
                     </th>

                     <th>
                         @Html.DisplayNameFor(model => model.status)
                     </th>
                     <th>
                         @Html.DisplayNameFor(model => model.cid)
                     </th>
                     <th></th>
                 </tr>

                @if (Model.Any())
                {
                    foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.cid)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-success" }) |

                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                    }
                }
                else
                {
                <tr>
                    <td><h5 class="text-center">Not Found Data</h5></td>
                </tr>
                }
            </table>
         }

        </div>
    </div>
</div>