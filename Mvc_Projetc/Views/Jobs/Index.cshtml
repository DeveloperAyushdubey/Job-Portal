@model IEnumerable<Mvc_Projetc.Models.Jobs>



<div class="container">
    <div class="row">
        <div class="col-md-3 mt-5">
            @Html.Partial("_Sidebar")
        </div>
        <div class="col-md-9 mt-5">
            <h2>Jobs Index</h2>
            <hr />

            @using (Html.BeginForm("Index", "Jobs", FormMethod.Get))
            {

                <div class="row">
                    <div class="col-md-6">
         <a class="btn btn-primary" @Html.ActionLink("Create","create")
                    </div>
                    <div class="col-md-6">
                        <input type="search" name="search" class="form-control" placeholder="Search title"
                    </div>
                </div>

               
            <table class="table mt-2">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.companyname)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.skills)
                    </th>


                    <th>
                        @Html.DisplayNameFor(model => model.location)
                    </th>


                  
                    <th></th>
                </tr>

                @if (Model.Any())
                {



                    foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.companyname)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.skills)
                        </td>


                        <td>
                            @Html.DisplayFor(modelItem => item.location)
                        </td>


                       
                        <td>
                            @Html.ActionLink("Edit", "update", new { id = item.Id }, new { @class = "btn btn-success" }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info" }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                    }
}
else
                {
                    <tr>
                        <td><h5 class="text-center ">Jobs not found</h5></td>
                    </tr>
                }


            </table>
            }
        </div>
    </div>
</div>
