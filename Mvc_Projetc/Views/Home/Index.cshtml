@model IEnumerable<Mvc_Projetc.Models.Jobs>

<div class="container ">

    <div class="row mt-5">

  @using (Html.BeginForm("Index", "Home", FormMethod.Get))
  {


<h1 class="text-center">Latest Jobs</h1><hr /><div class="row">
            <div class="col-md-12">
                <input type="search" placeholder="Search the Job Title" class="form-control" name="search" />
            </div>
        </div><div class="row">

            @if (Model.Any())
            {
        foreach (var item in Model)
        {
            <div class="col-xxl-4 col-xl-6 col-md-6 col-11 mt-5">
                <div class="card" style="width: 18rem;">

                    <div class="card-body">
                        <h3 class="card-title">@item.Title</h3>
                        <h5 class="card-title">@item.companyname</h5>
                        <p class="card-text">@item.Description</p>
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info" })
                    </div>
                </div>
            </div>
        }


}
else
                {
                    <div> <h1 class="text-center text-info mt-5">Not Found Jobs</h1> </div>
                }
            </div>
  }
    </div>
</div>


