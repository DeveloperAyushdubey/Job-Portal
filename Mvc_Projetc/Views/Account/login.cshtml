@model Mvc_Projetc.Admintable

@{
    ViewBag.Title = "login";
}

<h2>login</h2>

<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            @using (Html.BeginForm())
            {
            <div class="card p-5">
